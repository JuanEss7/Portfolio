<style>
    main {
        height: 100dvh;
        display: flex;
        width: 80%;
        & section {
            width: clamp(fit-content, 50%, 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    }
    h1 {
        font-size: var(--big-font-size);
        font-weight: var(--font-semi-bold);
        color: var(--title-color);
    }
    .informacion {
        width: fit-content;
        display: flex;
        gap: 1rem;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        text-wrap: wrap;
    }

    .informacion div {
        display: flex;
        justify-content: space-between;
        align-items: center;
        & .line {
            width: 80px;
            border-radius: 50px;
            height: 1px;
            margin-right: 1rem;
            background-color: var(--title-color);
        }
        & h3 {
            font-size: var(--h3-font-size);
            font-weight: var(--font-medium);
            color: var(--title-color);
        }
    }
    .informacion p {
        font-size: var(--small-font-size);
        color: var(--text-color);
    }
    .iconos {
        margin-top: 1rem;
        height: fit-content;
        width: fit-content;
        align-self: flex-start;
        display: flex;
        align-items: center;
        gap: 0.7rem;
        & li {
            height: 28px;
            width: fit-content;
            & :first-child,
            &:last-child {
                transition: all 0.16s ease;
            }
            & :first-child:hover,
            &:last-child:hover {
                cursor: pointer;
                transform: scale(1.04);
                fill: var(--title-color);
            }
        }
    }
    .imagen {
        /* border: 1px solid; */
        & div {
            border: 1px solid;
            width: 400px;
            height: 400px;
        }
    }
    @media screen and (width <= 790px) {
        main {
            height: fit-content;
            flex-direction: column-reverse;
            justify-content: center;
            align-items: center;
        }
        h1 {
            font-size: 2.5rem;
        }
        .informacion {
            border: 1px solid;
            align-items: center;
            text-align: center;
            & p {
                border: 1px solid;
                width: 90%;
            }
            & .iconos {
                border: 1px solid;
                align-self: center;
            }
        }
        .imagen {
            height: fit-content;
        }
    }
</style>
