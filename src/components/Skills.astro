---

<section class="container" id="skills">
    <h2>Skills</h2>
    <ul>
        {
            skills.map((skill) => {
                return (
                    <li>
                        <HiBadgeCheck />
                        {skill.lenguaje}
                    </li>
                );
            })
        }
    </ul>
</section>
<style>
    .container {
        margin: 3rem 0;
        height: 60dvh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 3rem;
    }
    h2 {
        font-size: var(--h1-font-size);
        font-weight: var(--font-semi-bold);
        color: var(--title-color);
    }
    .container ul {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        & > li {
            border-radius: 15px;
            padding: var(--mb-1);
            background-color: var(--container-color);
            box-shadow: 0px 0px 15px #0002;
        }
    }

    @media screen and (width <= 790px) {
        #about {
            height: fit-content;
        }
        .informacion {
            flex-direction: column;
            & .educacion,
            & .skills {
                width: 100%;
                height: fit-content;
            }
        }
        .skills {
            height: fit-content;
            display: flex;
            align-items: center;
            justify-content: center;
            & .container-skills {
                /* border: 1px solid purple; */
                justify-content: center;
            }
        }
    }
</style>
