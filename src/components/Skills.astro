---
import { HiBadgeCheck } from "react-icons/hi";
const skills = [
    "HTML",
    "CSS",
    "JavaScript",
    "ReactJs",
    "Tailwind",
    "TypeScript",
    "NextJs",
    "Astro",
    "NodeJS",
    "Express",
    "Prisma",
];
---

<section class="container">
    <div class="container-skills">
        <div>
            <h2>Skills</h2>
            <ul>
                {
                    skills.map((skill) => {
                        return (
                            <li>
                                <HiBadgeCheck />
                                {skill}
                            </li>
                        );
                    })
                }
            </ul>
        </div>
    </div>
</section>
<style>
    .container {
        border: 1px solid blue;
        margin: 3rem 0;
        height: fit-content;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        & .container-skills {
            border: 1px solid purple;
            width: 100%;
            height: fit-content;
            display: flex;
            justify-content: flex-end;
            gap: 1.5rem;
        }
    }
    .container-skills div {
        /* border: 1px solid; */
        border-radius: 20px;
        width: 250px;
        height: fit-content;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.8rem;
        padding: var(--mb-1);
        background-color: var(--container-color);
        box-shadow: 0px 0px 15px #0002;
        & ul {
            /* border: 1px solid; */
            width: 100%;
            height: 100%;
            font-size: var(--small-font-size);
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: min-content;
            gap: 0.5rem;
            justify-items: start;
            align-items: center;
            & li {
                display: flex;
                justify-content: start;
                align-items: center;
            }
        }
    }
    @media screen and (width <= 790px) {
        #about {
            height: fit-content;
        }
        .informacion {
            flex-direction: column;
            & .educacion,
            & .skills {
                width: 100%;
                height: fit-content;
            }
        }
        .skills {
            height: fit-content;
            display: flex;
            align-items: center;
            justify-content: center;
            & .container-skills {
                /* border: 1px solid purple; */
                justify-content: center;
            }
        }
    }
</style>
