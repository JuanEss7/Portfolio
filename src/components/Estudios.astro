---
import { LuExternalLink } from "react-icons/lu";
const certificados = [
    {
        leng: "Alura",
        link: "https://app.aluracursos.com/program/certificate/1029141d-d026-4deb-a95a-368bb1335286?lang",
        img: "../../public/certificados/alura.webp",
    },
    {
        leng: "Next",
        link: "https://udemy-certificate.s3.amazonaws.com/pdf/UC-fe9730dd-8db6-4672-8e9d-f5f28cfce4d4.pdf",
        img: "../../public/certificados/next.webp",
    },
    {
        leng: "Node",
        link: "https://udemy-certificate.s3.amazonaws.com/pdf/UC-c76c6c9f-7b3f-4662-8d47-e13465f29a5e.pdf",
        img: "../../public/certificados/node-c.webp",
    },
];
---

<section class="container section" id="estudios">
    <h2>Estudios</h2>
    <div class="container_estudios">
        {
            certificados.map(({ link, img, leng }) => {
                return (
                    <div>
                        <img src={img} alt={`${leng} certificado`} />
                        <a href={link} target="_blank">
                            Abrir
                            <LuExternalLink
                                style={{
                                    color: "inherit",
                                    fontSize: "inherit",
                                }}
                            />
                        </a>
                    </div>
                );
            })
        }
    </div>
</section>
<style>
    .container {
        height: fit-content;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    h2 {
        font-size: var(--h1-font-size);
        font-weight: var(--font-semi-bold);
        color: var(--title-color);
        margin-bottom: var(--mb-3);
    }
    .container_estudios {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
        & > div {
            box-shadow: 0px 0px 15px #0003;
            border-radius: 10px;
            padding: 0;
            position: relative;
            width: 300px;
            height: 250px;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            & > img {
                border-radius: 10px;
                height: 100%;
                width: 100%;
                transition: all 0.2s ease;
            }
            & > a {
                position: absolute;
                padding: 0.5rem;
                font-size: var(--normal-font-size);
                background-color: transparent;
                color: var(--title-color);
                border: 1px solid var(--title-color);
                border-radius: 5px;
                font-weight: 700;
                height: min-content;
                width: fit-content;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 5px;
                opacity: 0;
                transform: translateY(20px);
                transition: all 0.2s ease;
                &:hover {
                    background-color: var(--title-color);
                    color: #fff;
                    font-weight: 400;
                }
            }
            &:hover > img {
                opacity: 0.5;
                filter: blur(5px);
            }
            &:hover > a {
                transform: translateY(0);
                opacity: 1;
            }
        }
    }
</style>
