<section id="contacto" class="container section">
    <h2>Contacto</h2>
    <form>
        <label>
            Nombre
            <input type="text" name="nombre" required />
        </label>
        <label>
            Email
            <input type="email" name="email" required />
        </label>
        <label>
            Asunto
            <input type="text" name="asunto" required />
        </label>
        <label>
            Mensaje
            <textarea name="mensaje" rows="3"></textarea>
        </label>
        <button type="submit">Enviar</button>
    </form>
</section>
<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }
    h2 {
        font-size: var(--h1-font-size);
        font-weight: var(--font-semi-bold);
        color: var(--title-color);
    }
    .container form {
        background-color: var(--container-color);
        box-shadow: 0px 0px 15px #0002;
        border-radius: 20px;
        padding: 1rem;
        width: 40%;
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: space-around;
        gap: 1rem;
        & > label {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            font-weight: 500;
            font-size: var(--normal-font-size);
            color: var(--title-color-dark);
            gap: 0.5rem;
            & > input {
                width: 100%;
                padding: 0 5px;
                color: var(--title-color);
                font-size: var(--small-font-size);
                &:focus {
                    outline-color: var(--title-color);
                }
            }
        }

        & textarea {
            width: 100%;
            padding: 0 5px;
            resize: vertical;
            font-size: var(--small-font-size);
            &:focus {
                outline-color: var(--title-color);
            }
        }

        & > button[type="submit"] {
            align-self: center;
            background-color: var(--title-color);
            color: #fff;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: opacity 0.2s ease;
            &:hover {
                opacity: 0.9;
            }
        }
    }
    @media screen and (width <= 790px) {
        .container form {
            width: 80%;
        }
    }
</style>
<script>
    import { toast } from "sonner";
    const form = document.querySelector("#contacto > form");
    form?.addEventListener("submit", (e) => {
        e.preventDefault();
        const formTarget = e.target as HTMLFormElement;
        const { nombre, email, asunto, mensaje } = Object.fromEntries(
            new FormData(formTarget),
        );
        if (
            typeof nombre !== "string" ||
            typeof email !== "string" ||
            typeof asunto !== "string" ||
            typeof mensaje !== "string"
        )
            return;
        fetch("http://localhost:4321/api/server", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ nombre, asunto, mensaje, email }),
        })
            .then((res) => res.json())
            .then((msj) => toast.success(msj))
            .catch((err) => toast.error(err));
    });
</script>
